<UserControl x:Class="Sweeper.Controls.PolygonalGraphBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sweeper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             IsHitTestVisible="True" ClipToBounds="True"
             BorderBrush="LightGray">
    <Border BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" BorderThickness="1">
        <Canvas x:Name="graphCanvas">
            
        </Canvas>
    </Border>
</UserControl>
