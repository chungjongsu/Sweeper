<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Sweeper.Styles"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="InLineGroupBox" TargetType="GroupBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}" Foreground="{DynamicResource MaterialDesignBody}"
                                         Margin="20 20 20 0" Padding="0 8 0 8" UniformCornerRadius="10" materialDesign:ShadowAssist.ShadowDepth="Depth2" materialDesign:ShadowAssist.Darken="True">
                        <StackPanel Orientation="Vertical">
                            <ContentPresenter Margin="20 10 20 10" ContentSource="Header" RecognizesAccessKey="True"/>
                            
                            <Separator Background="{DynamicResource MaterialDesignDivider}"/>

                            <ContentPresenter Margin="10 0 10 0"/>
                        </StackPanel>
                    </materialDesign:Card>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>